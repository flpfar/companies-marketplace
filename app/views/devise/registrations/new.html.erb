<div class="login-container flex flex-col items-center justify-center h-screen">
  
  <%= image_tag "logo-dark.png", class: "mb-2" %>
  <div class="login border border-gray-400 bg-white p-8 text-gray-900 rounded">
    <h2 class="text-center font-bold text-gray-900 text-lg">Criar conta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mt-4">
        <%= f.label :email, class: "text-sm" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "p-2 border border-gray-400 rounded" %>
      </div>

      <div class="field mt-4">
        <%= f.label :password, class: "text-sm" %>
        <% if @minimum_password_length %>
        <em class="text-sm">(m√≠nimo <%= @minimum_password_length %> caracteres)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Senha', class: "p-2 border border-gray-400 rounded" %>
      </div>

      <div class="field mt-4">
        <%= f.label :password_confirmation, class: "text-sm"  %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirmar senha', class: "p-2 border border-gray-400 rounded" %>
      </div>

      <div class="actions mt-6">
        <%= f.submit "Criar conta", class: "w-full py-2 bg-gray-900 hover:bg-gray-800 text-white cursor-pointer"  %>
      </div>
    <% end %>

    <div class="devise-links text-center underline mt-4">
      <%= link_to "Entrar", new_session_path(resource_name), class: "hover:text-gray-600" %><br />
    </div>
  </div>
</div>
